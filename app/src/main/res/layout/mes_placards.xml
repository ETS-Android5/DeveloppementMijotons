<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_nomMenuPlacards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal"
        android:text="@string/menuPlacard"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:background="@color/vert"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="100">

        <EditText
            android:id="@+id/et_recherche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="75dp"
            android:layout_weight="10"
            android:gravity="center|center_horizontal"
            android:hint="@string/defautRecherche"
            android:autofillHints="15"
            android:inputType="text"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:id="@+id/ll_recherche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            >
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            >

            <LinearLayout
                android:id="@+id/ll_menuG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="100"
                >

                <Button
                android:id="@+id/b_fruits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="20"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="@color/orangeFruit"
                android:text="@string/texteBoutonFruits"
                android:textColor="@color/white"
                android:drawableStart="@drawable/fruits"
                android:drawableTint="@color/white" />

                <LinearLayout
                    android:id="@+id/ll_fruits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orangeFruitClair"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    >

                </LinearLayout>

                <Button
                    android:id="@+id/b_lait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="20"
                    android:background="@color/bleuLait"
                    android:drawableStart="@drawable/produits_laitiers"
                    android:drawableTint="@color/white"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/texteBoutonLait"
                    android:textColor="@color/white" />
                <LinearLayout
                    android:id="@+id/ll_lait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/bleuLaitClair"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    >

                </LinearLayout>
            <Button
            android:id="@+id/b_viandes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="20"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@color/rougeViande"
            android:drawableStart="@drawable/viande"
            android:drawableTint="@color/white"
            android:text="@string/texteBoutonViandes"
            android:textColor="@color/white"/>
                <LinearLayout
                    android:id="@+id/ll_viandes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/rougeViandeClair"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">

                </LinearLayout>
                <Button
            android:id="@+id/b_legumes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="20"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@color/vertLegume"
            android:text="@string/texteBoutonLegumes"
            android:textColor="@color/white"
            android:drawableStart="@drawable/legumes"
            android:drawableTint="@color/white"
            />
                <LinearLayout
                    android:id="@+id/ll_legumes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/vertLegumeClair"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                </LinearLayout>

                <Button
                    android:id="@+id/b_autre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="20"
                    android:background="@color/grisAutre"
                    android:drawableStart="@drawable/autre"
                    android:drawableTint="@color/white"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/texteBoutonAutre"
                    android:textColor="@color/white" />
                <LinearLayout
                    android:id="@+id/ll_autre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/grisAutreClair"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    >
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">
            <Button
                android:id="@+id/b_terminerChoixPlacards"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/customborder"
                android:text="@string/texteBoutonFini" />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/vert"
        android:foregroundTint="#FFFFFF"
        app:itemIconTint="@color/white"
        app:itemTextColor="#FFFFFF"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigation_item" />


</LinearLayout>